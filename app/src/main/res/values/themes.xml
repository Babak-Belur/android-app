<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudiAry" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.StudiAry.TextHeadline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.StudiAry.TextHeadline2" parent="Theme.StudiAry.TextHeadline1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.StudiAry.TextHeadline1.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.StudiAry.TextHeadline2.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Theme.StudiAry.TextBody1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="Theme.StudiAry.TextBody2" parent="Theme.StudiAry.TextBody1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.StudiAry.TextBody1.Bold">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

</resources>