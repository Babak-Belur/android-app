<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_question"
        style="@style/Theme.StudiAry.TextHeadline2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        tools:text="Question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/tv_question"
        app:layout_constraintStart_toStartOf="@+id/tv_question"
        app:layout_constraintTop_toBottomOf="@id/tv_question">

        <RadioButton
            android:id="@+id/rb_answer_a"
            style="@style/Theme.StudiAry.TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Answer A" />

        <RadioButton
            android:id="@+id/rb_answer_b"
            style="@style/Theme.StudiAry.TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Answer B" />

        <RadioButton
            android:id="@+id/rb_answer_c"
            style="@style/Theme.StudiAry.TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Answer C" />

        <RadioButton
            android:id="@+id/rb_answer_d"
            style="@style/Theme.StudiAry.TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Answer D" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>