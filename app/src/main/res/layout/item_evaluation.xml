<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/view_decor"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/purple_500"
            app:cardCornerRadius="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_score"
            style="@style/Theme.StudiAry.TextHeadline1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/_0"
            android:textColor="@color/purple_500"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Theme.StudiAry.TextBody1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="20 Sep 2020" />

        <TextView
            android:id="@+id/label_free_time"
            style="@style/Theme.StudiAry.TextBody2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/label_free_time"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_date" />

        <TextView
            android:id="@+id/tv_free_time"
            style="@style/Theme.StudiAry.TextBody1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="@+id/label_free_time"
            app:layout_constraintStart_toEndOf="@id/label_free_time"
            app:layout_constraintTop_toTopOf="@+id/label_free_time"
            tools:text="2 H" />

        <TextView
            android:id="@+id/label_study_time"
            style="@style/Theme.StudiAry.TextBody2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/label_study_time"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_free_time" />

        <TextView
            android:id="@+id/tv_study_time"
            style="@style/Theme.StudiAry.TextBody1.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="@id/label_study_time"
            app:layout_constraintStart_toEndOf="@id/label_study_time"
            app:layout_constraintTop_toTopOf="@id/label_study_time"
            tools:text="2 H"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>